@model List<Proyecto_Final_Sql_Store_Games.Models.ViewModel.ViewTiendaItem>

<div class="container-max-width mt-4">
    <h2 class="text-start mb-4 text-light-steam">Tienda de Items</h2>

    <div class="row mb-3 align-items-center">
        <div class="col-12">
            <form method="get" class="search-bar-steam p-2 d-flex align-items-center">
                <input type="text" name="searchString" class="form-control form-control-sm me-2 steam-input"
                       placeholder="Buscar por nombre" value="@ViewBag.SearchString" />

                <select name="filterRareza" class="form-select form-select-sm steam-input me-2" style="width: 150px;">
                    <option value="">-- Rareza (Todos) --</option>
                    <option value="1" selected="@(ViewBag.FilterRareza == 1)">Común</option>
                    <option value="2" selected="@(ViewBag.FilterRareza == 2)">Raro</option>
                    <option value="3" selected="@(ViewBag.FilterRareza == 3)">Épico</option>
                    <option value="4" selected="@(ViewBag.FilterRareza == 4)">Legendario</option>
                    <option value="5" selected="@(ViewBag.FilterRareza == 5)">Mítico</option>
                </select>

                <button type="submit" class="btn btn-primary btn-sm">Filtrar</button>
            </form>
        </div>
    </div>

    <div class="card bg-dark border-0 shadow-lg">
        <div class="card-body">
            @if (Model == null || Model.Count == 0)
            {
                <div class="text-center text-light-steam-soft py-4">
                    <h5>No se encontraron items.</h5>
                    <p class="mb-0">Ajusta tu búsqueda por nombre o tu filtro de rareza.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-striped table-hover align-middle custom-table">
                        <thead class="bg-darker-steam">
                            <tr>
                                <th>
                                    <a href="@Url.Action("Index", new { sortOrder = ViewData["NombreSortParm"], searchString = ViewBag.SearchString, filterRareza = ViewBag.FilterRareza })" class="text-light-steam-soft">Nombre del Producto</a>
                                </th>
                                <th>
                                    <a href="@Url.Action("Index", new { sortOrder = ViewData["RarezaSortParm"], searchString = ViewBag.SearchString, filterRareza = ViewBag.FilterRareza })" class="text-light-steam-soft">Rareza</a>
                                </th>
                                <th>
                                    <a href="@Url.Action("Index", new { sortOrder = ViewData["PrecioSortParm"], searchString = ViewBag.SearchString, filterRareza = ViewBag.FilterRareza })" class="text-light-steam-soft">Precio</a>
                                </th>
                                <th>
                                    <a href="@Url.Action("Index", new { sortOrder = ViewData["JuegoOrigenSortParm"], searchString = ViewBag.SearchString, filterRareza = ViewBag.FilterRareza })" class="text-light-steam-soft">Juego Origen</a>
                                </th>
                                <th>
                                    <a href="@Url.Action("Index", new { sortOrder = ViewData["CategoriaSortParm"], searchString = ViewBag.SearchString, filterRareza = ViewBag.FilterRareza })" class="text-light-steam-soft">Categoría</a>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductoNombre</td>
                                    <td>@item.ItemRareza</td>
                                    <td>@item.ProductoPrecio.ToString("C")</td>
                                    <td>@item.JuegoOrigenNombre</td>
                                    <td>@item.CategoriaNombre</td>
                                    <td>
                                        <form asp-controller="Carrito" asp-action="Agregar" method="post" class="d-inline">
                                            <input type="hidden" name="idProducto" value="@item.ProductoId" />
                                            <input type="hidden" name="origen" value="TiendaItems" />
                                            <button type="submit" class="btn btn-sm btn-success">
                                                Agregar a cesta
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage - 1, searchString = ViewBag.SearchString, filterRareza = ViewBag.FilterRareza })" class="btn btn-secondary btn-sm">Anterior</a>
                    }
                    else
                    {
                        <span class="btn btn-secondary btn-sm disabled">Anterior</span>
                    }

                    <div class="d-flex align-items-center">
                        <span class="text-light-steam-soft me-2">Página @ViewBag.CurrentPage de @ViewBag.TotalPages</span>
                    </div>

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <a href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 1, searchString = ViewBag.SearchString, filterRareza = ViewBag.FilterRareza })" class="btn btn-secondary btn-sm">Siguiente</a>
                    }
                    else
                    {
                        <span class="btn btn-secondary btn-sm disabled">Siguiente</span>
                    }
                </div>
            }
        </div>
    </div>
</div>
