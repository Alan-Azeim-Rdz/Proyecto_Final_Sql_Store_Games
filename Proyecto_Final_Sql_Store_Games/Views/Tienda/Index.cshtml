@model IEnumerable<Proyecto_Final_Sql_Store_Games.Models.ViewModel.ViewTienda>

<div class="container-max-width mt-4">
    <h2 class="text-start mb-4 text-light-steam">Auditoría General de Juegos y DLCs</h2>

    <!-- Barra de Búsqueda -->
    <div class="row mb-3 align-items-center">
        <div class="col-12">
            <form asp-action="Index" method="get" class="search-bar-steam p-2 d-flex align-items-center">
                <input type="text" name="SearchString" class="form-control form-control-sm me-2 steam-input" placeholder="Buscar por nombre..." value="@ViewData["CurrentFilter"]">
                <button type="submit" class="btn btn-primary btn-sm">Buscar</button>
            </form>
        </div>
    </div>

    <!-- Filtros -->
    <div class="row">
        <div class="col-md-3">
            <div class="sidebar-filter p-3">
                <h5 class="text-white mb-3">Filtrar por...</h5>
                <form asp-action="Index" method="get">
                    <!-- Filtro por Desarrolladora -->
                    <div class="filter-section mb-4">
                        <h6 class="text-light-steam-soft mb-2">Desarrolladora</h6>
                        <input type="text" name="filterDesarrolladora" class="form-control" placeholder="Buscar desarrolladora" value="@ViewData["CurrentFilterDesarrolladora"]" />
                    </div>

                    <!-- Filtro por Distribuidora -->
                    <div class="filter-section mb-4">
                        <h6 class="text-light-steam-soft mb-2">Distribuidora</h6>
                        <input type="text" name="filterDistribuidora" class="form-control" placeholder="Buscar distribuidora" value="@ViewData["CurrentFilterDistribuidora"]" />
                    </div>

                    <button type="submit" class="btn btn-outline-danger btn-sm w-100">Aplicar Filtros</button>
                </form>
            </div>
        </div>

        <div class="col-md-9">
            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover shadow-lg custom-table">
                    <thead class="bg-darker-steam">
                        <tr>
                            <th>Nombre del Producto</th>
                            <th>Fecha de Creación</th>
                            <th>Desarrolladora</th>
                            <th>Distribuidora</th>
                            <th>Género</th>  <!-- Mostrar el Género -->
                            <th></th>  <!-- Columna sin nombre (antes 'Clasificación') -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-start">@item.Nombre</td> <!-- Nombre del Juego o DLC -->
                                <td>@item.FechaCreacion.ToString("dd/MM/yyyy")</td> <!-- Fecha de Creación -->
                                <td>@item.Desarrolladora</td> <!-- Nombre de la Desarrolladora -->
                                <td>@item.Distribuidora</td> <!-- Nombre de la Distribuidora -->
                                <td>@item.Genero</td> <!-- Mostrar el Género -->
                                <td>
                                    <!-- Botón para agregar a una cesta imaginaria -->
                                    <form asp-controller="Carrito" asp-action="Agregar" method="post" class="d-inline">
                                        <input type="hidden" name="idProducto" value="" />
                                        <button type="submit" class="btn btn-sm btn-success">
                                            Agregar a cesta
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginado -->
            <div class="d-flex justify-content-between align-items-center">
                <!-- Botón Anterior -->
                @if (ViewBag.CurrentPage > 1)
                {
                    <a href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage - 1, SearchString = ViewData["CurrentFilter"], sortOrder = ViewData["CurrentSort"], filterDistribuidora = ViewData["CurrentFilterDistribuidora"], filterDesarrolladora = ViewData["CurrentFilterDesarrolladora"] })" class="btn btn-secondary btn-sm">Anterior</a>
                }
                else
                {
                    <span class="btn btn-secondary btn-sm disabled">Anterior</span>
                }

                <!-- Indicador de Página -->
                <div class="d-flex align-items-center">
                    <span class="text-light-steam-soft me-2">Página @ViewBag.CurrentPage de @ViewBag.TotalPages</span>
                </div>

                <!-- Botón Siguiente -->
                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <a href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 1, SearchString = ViewData["CurrentFilter"], sortOrder = ViewData["CurrentSort"], filterDistribuidora = ViewData["CurrentFilterDistribuidora"], filterDesarrolladora = ViewData["CurrentFilterDesarrolladora"] })" class="btn btn-secondary btn-sm">Siguiente</a>
                }
                else
                {
                    <span class="btn btn-secondary btn-sm disabled">Siguiente</span>
                }
            </div>
        </div>
    </div>
</div>
