@model IEnumerable<Proyecto_Final_Sql_Store_Games.Models.ViewModel.ViewAmigo>

<div class="container-max-width mt-4">
    <h2 class="text-start mb-4 text-light-steam">Mis Amigos</h2>

    <!-- Barra de búsqueda -->
    <div class="row mb-3 align-items-center">
        <div class="col-12">
            <form asp-action="Index" method="get" class="search-bar-steam p-2 d-flex align-items-center">
                <input type="text"
                       name="searchString"
                       class="form-control form-control-sm me-2 steam-input"
                       placeholder="Buscar amigo por nombre o correo"
                       value="@ViewData["CurrentFilter"]" />
                <button type="submit" class="btn btn-primary btn-sm">Buscar</button>
            </form>
        </div>
    </div>

    <div class="card bg-dark border-0 shadow-lg">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center text-light-steam-soft py-4">
                    <h5>No tienes amigos aún.</h5>
                    <p class="mb-0">Agrega a usuarios como amigos para verlos aquí.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-striped table-hover align-middle custom-table">
                        <thead class="bg-darker-steam">
                            <tr>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var amigo in Model)
                            {
                                <tr>
                                    <td class="text-start">@amigo.Nombre</td>
                                    <td>@amigo.Correo</td>
                                    <td>
                                        <form method="post" asp-action="EliminarAmigo" asp-route-idAmigo="@amigo.IdAmigo" onsubmit="return confirm('¿Seguro que quieres eliminar a este amigo?');">
                                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
